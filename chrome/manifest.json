{
  "name": "OC Twitter",
  "short_name": "OCTwitter",
  "description": "A Twitter theme that removes comments & declutters the new Twitter UI.",
  "version": "1.0.0",
  "manifest_version": 3,
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "css": [
        "minimal-twitter.css"
      ],
      "js": [
        "applyOptions.js"
      ],
      "matches": [
        "https://twitter.com/*",
        "https://mobile.twitter.com/*"
      ]
    }
  ],
  "icons": {
    "16": "images/MinimalTwitterIcon16.png",
    "32": "images/MinimalTwitterIcon32.png",
    "48": "images/MinimalTwitterIcon48.png",
    "128": "images/MinimalTwitterIcon128.png"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+Shift+T",
        "mac": "MacCtrl+Shift+T"
      },
      "description": "Opens Minimal Twitter"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}